<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="App Logo"
        android:src="@drawable/maxfitlogo" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="App Logo"
        android:src="@drawable/userprofile"
        tools:layout_editor_absoluteX="333dp"
        tools:layout_editor_absoluteY="0dp" />


    <EditText
        android:id="@+id/UpdatePullups"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your updated pull-up max"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="449dp" />


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="36dp"
        android:text="Add"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="736dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Any Exercise To Your Plan"
        android:textColor="@color/textColor"
        android:textSize="29dp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="374dp" />

</androidx.constraintlayout.widget.ConstraintLayout>