<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="App Logo"
        android:src="@drawable/maxfitlogo" />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your name"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="221dp" />

    <EditText
        android:id="@+id/UserAge"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your age"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="328dp" />

    <EditText
        android:id="@+id/UserHeight"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your height"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="437dp" />

    <EditText
        android:id="@+id/UserWeight"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your weight"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="554dp" />

    <EditText
        android:id="@+id/UserGender"
        android:layout_width="288dp"
        android:layout_height="62dp"
        android:background="@color/black"
        android:hint="Enter your gender"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="660dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="36dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="762dp"

        />

    <TextView
        android:id="@+id/NameLabel"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="221dp" />

    <TextView
        android:id="@+id/AgeLabel"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:text="Age"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/HeightLabel"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:text="Height"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/WeightLabel"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:text="Weight"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="554dp" />

    <TextView
        android:id="@+id/GenderLabel"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:text="Gender"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="660dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your personal details"
        android:textColor="@color/textColor"
        android:textSize="29dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>